@{
    ViewBag.Title = "Car Rent Karo";
}

<div class="jumbotron">
    <h1>Let's Go...</h1>
    <p class="lead">This is car rental system for backoffice where they can manage car rental inforamtion.</p>
 
    @*<img src="~/Images/imgcar.jpg" alt="No Image Available" />*@
</div>

<header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/imgcar.jpg" alt="No Image Available" />
            <div class="carousel-caption">
                <h2>Car Dekho</h2>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/img1.jpg" alt="No Image Available" />  
            <div class="carousel-caption">
            <h2>Car Rent Karo</h2>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/img3.jpg" alt="No Image Available" />
            <div class="carousel-caption">
                <h2>Car Drive Karo</h2>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</header>
